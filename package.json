{
  "name": "izignamx-express-landing",
  "version": "1.0.0",
  "description": "Static PWA Landing Page for IzignaMx Express",
  "scripts": {
    "start": "npx serve .",
    "test": "echo \"No unit tests required for static HTML PWA. See whatsapp-bot for backend tests.\" && exit 0",
    "lint": "npx html-validate index.html && npx prettier \"**/*.html\" \"**/*.md\" --check",
    "format": "npx prettier --write \"**/*.{html,md,css,js}\"",
    "pa11y": "npx pa11y http://localhost:3000"
  },
  "keywords": [
    "pwa",
    "landing",
    "leads",
    "static"
  ],
  "author": "IzignaMx",
  "license": "MIT",
  "dependencies": {
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "html-validate": "^10.8.0",
    "pa11y": "^9.1.0",
    "prettier": "^3.8.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
