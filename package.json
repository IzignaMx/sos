{
  "name": "whatsapp-ai-automation",
  "version": "1.0.0",
  "description": "Self-hosted AI chatbot with WhatsApp Business API integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t whatsapp-ai-bot .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "ai",
    "automation",
    "self-hosted",
    "ollama",
    "business-api"
  ],
  "author": "Your Name <your.email@domain.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "redis": "^4.6.0",
    "pg": "^8.11.0",
    "dotenv": "^16.3.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "node-cron": "^3.0.3",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-ai-automation.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-ai-automation/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-ai-automation#readme"
